{
  "name": "Habitica Sync",
  "description": "Sync Trello cards as Habitica tasks securely via API.",
  "author": "Your Name or Organization",
  "icon": {
    "url": "https://habitica-trello.vercel.app/icon.png",
    "width": 64,
    "height": 64
  },
  "capabilities": {
    "card-buttons": [
      {
        "text": "Sync to Habitica",
        "callback": "cardButtonCallback",
        "condition": "edit"
      }
    ]
  },
  "connectors": {
    "iframe": {
      "url": "https://habitica-trello.vercel.app/index.html"
    }
  },
  "permissions": ["card-buttons"],
  "api": {
    "version": 1
  }
}
